@page
@model AcmeNotas.App.Presentacion.Pages.CrudGrupo.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-group">
                <label asp-for="Grupo.Formador" class="control-label"></label>
                <select asp-for="FormadorID" class="form-control" asp-items="Model.listaFormadores" onchange="getValue()">
                    <option>Seleccione un formador</option>
                </select>
                <span asp-validation-for="Grupo.Formador" class="text-danger">@Model.Mensaje</span>
            </div>
          

            <div class="form-group">
                <label asp-for="Grupo.Tutor" class="control-label"></label>
                <select asp-for="TutorID" class="form-control"> >
                    <option>Seleccione un tutor</option>
                </select>
                <span asp-validation-for="Grupo.Tutor" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Grupo.CodigoGrupo" class="control-label"></label>
                <input type = "number" min="0" max="999" asp-for="Grupo.CodigoGrupo" class="form-control" required/>
                <span asp-validation-for="Grupo.CodigoGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo.Ciclo" class="control-label"></label>
                 <select asp-for="Grupo.Ciclo" class="form-control" >
                    <option>Seleccione un ciclo</option>
                    <option value="0">Ciclo 1</option>
                    <option value="1">Ciclo 2</option>
                    <option value="2">Ciclo 3</option>
                    <option value="3">Ciclo 4</option>
                </select>
                <span asp-validation-for="Grupo.Ciclo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo.Horario" class="control-label"></label>

                <select asp-for="HorarioID" class="form-control" asp-items="Model.listaHorarios">
                    <option>Seleccione un horario</option>
                </select>

                <span asp-validation-for="Grupo.Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
