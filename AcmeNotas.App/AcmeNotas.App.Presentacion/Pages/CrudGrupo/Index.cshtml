            <th>
                @Html.DisplayNameFor(model => model.Grupo[0].Ciclos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo[0].CodigoFormador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo[0].CodigoTutor)
